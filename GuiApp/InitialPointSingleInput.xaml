<UserControl x:Class="Qfe.InitialPointSingleInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Qfe"
             xmlns:xwpf="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200">
    <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center">
        <Label Content="{Binding PointName, Mode=OneWay}"/>
        <xwpf:DoubleUpDown ShowButtonSpinner="False" Value="{Binding PointValue, Mode=TwoWay}" Width="100"/>
    </StackPanel>
</UserControl>
